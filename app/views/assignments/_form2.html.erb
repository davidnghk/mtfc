      <%= simple_form_for(@assignment) do |f| %>
        <%= f.hidden_field :parent_id %>

        <div class="form-inputs">
          <div class="row ">
            <div class="col-xs-6 col-md-6  ">
              <%= f.association :work, :collection => Master.work %>
            </div>
            <div class="col-xs-6 col-md-6 ">
              <%= f.association :contractor, :collection => Chatroom.contractor %>
            </div>
          </div>

          <div class="row ">
            <div class="col-xs-6 col-md-6 ">
              <%= f.association :location %>
            </div>
            <div class="col-xs-6 col-md-6 ">
              <%= f.input :address %>
            </div>
          </div>

          <%= f.input :date_range, label: t('date_range'), input_html: { class: "form-control input-sm date-range-picker" } %>
          <%= f.input_field :start_datetime, as: :hidden, class: 'form-control input-sm start_hidden' %>
          <%= f.input_field :due_datetime, as: :hidden, class: 'form-control input-sm end_hidden' %>
          <%= f.input :color, label: t('color'), as: :select, collection: 
                  [['Orange','orange'], ['Yellow','yellow'], ['Blue','blue'], ['Green','green'], ['Red','red']] %>

          <div class="row ">
            <div class="col-xs-6 col-md-6  ">
              <%= f.association :incharge_user %>
            </div>
            <div class="col-xs-6 col-md-6  ">
              <%= f.association :worker_user %>
            </div>
          </div>
 
        </div>
        <br/>
        <div class="form-actions">
          <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
              <i class="fa fa-save fa-2x" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
