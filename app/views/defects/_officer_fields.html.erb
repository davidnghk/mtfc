<fieldset>
   <div class="row">
    <div class="col-xs-5 col-md-5 ">
      <%= f.input :name, label: false %>
    </div>
    <div class="col-xs-5 col-md-5 ">
      <%= f.input :passwd, label: false %>
    </div>
    <div class="col-xs-2 col-md-2 ">
      <%= f.hidden_field :_destroy %>
      <%= link_to '<i class="fa fa-trash fa-2x"></i>'.html_safe, '#', class: "remove_fields" %>
    </div>
  </div> 
</fieldset>