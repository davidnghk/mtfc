<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <% if @master.parent_id?  %>
        <%= @master.parent.display_name %> 
      <% else %> 
          <%= t('code')   %> 
      <% end %>
    </div>
    <div class="panel-body">

      <%= simple_form_for(@master) do |f| %>

        <div class="form-inputs">
          <%= f.hidden_field :parent_id %>
          <%= f.input :code %>
          <%= f.input :name %> 
          <%= f.input :chi_name %>
          <%= f.input :icon, collection: Master.icons, input_html: { autocomplete: 'off' } %>
          <% if @master.parent_id == 1 %>
            <%= f.input :setting1, label: t('workflow'), collection: Master.setting1s.keys %>
          <% end %>

        </div>

          <div class="form-actions">
            <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
                <i class="fa fa-save fa-2x" aria-hidden="true"></i>
            <% end %>
          </div>
      <% end %>

    </div>
  </div>
</div>