
<%= simple_form_for(@business_staff) do |f| %>

  <div class="form-inputs">
    <%= f.input :business_unit_id, label: t('business_unit') , :collection => Master.BusinessUnit %>
    <%= f.input :post_id, label: t('post') , :collection => Master.Post  %>
    <%= f.association :user, label: t('user') %>
  </div>

  <div class="form-actions">
    <%#= f.button :submit %>
  </div>
  <div class="form-actions">
  <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
      <i class="fa fa-save fa-2x" aria-hidden="true"></i>
  <% end %>
</div>
<% end %>
