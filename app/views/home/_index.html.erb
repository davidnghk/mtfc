<header id="top" class="header">
  <div class="container">
      <div class="row">
          <div class="col-lg-12 col-lg-offset-1 text-center">
     
           <br><br><br><br><br><br><br><br><br><br><br>           
           <% if user_signed_in? %>
             <%= link_to t("workflow"), "https://youtu.be/pTwgYwqEZS4",  class: "w3-button w3-green" %>
             <%  if (I18n.locale == :zh) %>
                <%= link_to "地理數據商業智能", "https://youtu.be/W2pGx7aRqeg", class: "w3-button w3-green" %>
