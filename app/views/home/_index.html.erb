            <p class="w3-lobster w3-xlarge w3-text-black">Team up with staff</p>
            <p class="w3-lobster w3-xlarge w3-text-black">Manage your tasks</p>
          </div>

           <br>
            <% if !user_signed_in? %>
              <%= link_to t("sign_in"), new_user_session_path, class: "w3-button w3-blue w3-round-xlarge" %>
            <% else %>
              <% if mobile_device? %>
                <div class="col-xs-4 col-md-4 ">
                  <%= link_to assignments_path  do %>
                    <i class="glyphicon glyphicon-inbox btn btn-primary btn-circle-lg  "></i> 
                  <% end %>
                  <br><small> <%= t("today_order") %> </small>
                </div>
            <% end %>
        </div>
      <% end %>
    </div>
