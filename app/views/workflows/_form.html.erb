
<%= simple_form_for(@workflow) do |f| %>

  <div class="form-inputs">
    <%= f.association :work, :collection => Master.work %>
    <%= f.association :location %>
    <%= f.association :business_unit, :collection => Chatroom.business_units %>
    <%= f.input :assignment,  :collection => Workflow.i18n_assignments %>
  </div>

    <div class="form-actions">
      <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
          <i class="fa fa-save fa-2x" aria-hidden="true"></i>
      <% end %>
    </div>
<% end %>
 